<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginStart="@dimen/restaurant_detail_margin_start"
    android:layout_marginTop="@dimen/restaurant_detail_margin_top">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_rating"
        android:textSize="@dimen/review_rating_text_size"/>

    <ImageView
        android:id="@+id/average_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/average_empty"
        android:tint="@color/colorAccent"
        android:layout_marginStart="@dimen/average_dot_margin_start" />

    <ImageView
        android:id="@+id/average_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/average_empty"
        android:tint="@color/colorAccent"
        android:layout_marginStart="@dimen/average_dot_margin_start" />

    <ImageView
        android:id="@+id/average_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/average_empty"
        android:tint="@color/colorAccent"
        android:layout_marginStart="@dimen/average_dot_margin_start" />

    <ImageView
        android:id="@+id/average_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/average_empty"
        android:tint="@color/colorAccent"
        android:layout_marginStart="@dimen/average_dot_margin_start" />

    <ImageView
        android:id="@+id/average_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/average_empty"
        android:tint="@color/colorAccent"
        android:layout_marginStart="@dimen/average_dot_margin_start" />





</LinearLayout>
